{
  "manifest_version": 2,
  "name": "Zen Tab",
  "version": "0.1.0",
  "description": "Zen Tab is a new tab page that helps you focus on what's important.",
  "permissions": ["tabs", "<all_urls>", "storage", "search"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Zen Tab"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yasuyuki.ymd@gmail.com",
      "strict_min_version": "42.0"
    }
  },
  "commands": {
    "open-zentab": {
      "suggested_key": {
        "default": "Command+Shift+T"
      },
      "description": "Open Zen Tab"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
